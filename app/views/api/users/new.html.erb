<div class="sign-up-log-in-form">
  <!-- used http://codepen.io/ehermanson/pen/KwKWEv as guide -->
  <ul class="tab-group">
     <li class="tab active">
       <a class="sign-up" href="#sign-up">Sign Up</a>
     </li>
     <li class="tab">
       <a class="log-in" href="#log-in">Log In</a>
     </li>
  </ul>

  <div class="tab-content">
    <div id="sign-up">
      <h2> Sign Up for Melp </h2>

      <form action="<%= api_users_url %>" method="post">
        <input type="hidden" name="authenticity_token"
               value="<%= form_authenticity_token %>">

        <div class="field-wrap">
          <input
            type="text"
            name="user[email]"
            value="<%= @user.email %>"
            placeholder="email *"
            autofocus="true"
            id="user_email">
        </div>

        <div class="field-wrap">
          <input
            type="password"
            name="user[password]"
            placeholder="password *"
            id="user_password">

          <input
            type="password"
            name="user[password_confirmation]"
            placeholder="confirm password *"
            id="user_password_confirmation">
        </div>

        <button class="form-button"
          type="submit"
          name="register">
          register
        </button>

      </form>
    </div>

    <div id="log-in">
      <h2> Welcome Back </h2>
      <form action="<%= api_session_url %>" method="post">
        <input type="hidden" name="authenticity_token"
               value="<%= form_authenticity_token %>">
        <div class="field-wrap">
          <input
            type="text"
            name="user[email]"
            value="<%= @user.email %>"
            placeholder="email"
            autofocus="true"
            id="user_email">
        </div>

        <div class="field-wrap">
          <input
            type="password"
            name="user[password]"
            placeholder="password"
            id="user_password">
        </div>
        <button class="form-button"
          type="submit"
          name="login">log in
        </button>
      </form>

      <button class="form-button" id="guest-login">
        log in as guest
      </button>

    </div>
  </div>
</div>
